{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2021", "dom"]
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
} 